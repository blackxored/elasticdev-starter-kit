{
  "name": "elasticdev-starter-kit",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "DEBUG=esk:* lerna run start --stream",
    "test": "jest",
    "commit": "commit",
    "flow": "flow",
    "eslint": "eslint .",
    "precommit": "lint-staged",
    "prettier": "prettier --write --trailing-comma all --tab-width 2 --single-quote --parser flow --print-width 80 \"{core,platforms}/**/*.js\" \"!**/dist/**\"",
    "docs": "documentation build -f html -o docs core/index.js platforms/*/index.js",
    "deploy": "lerna run --stream deploy",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --trailing-comma all --tab-width 2 --single-quote --parser flow --print-width 80",
      "git add",
      "jest --bail --findRelatedTests"
    ],
    "*.graphql": [
      "prettier --write --tab-width 2 --print-width 80"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "jest": {
    "preset": "react-native",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "workspaces": [
    "core",
    "platforms/*",
    "services/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-angular": "^6.1.3",
    "@commitlint/config-lerna-scopes": "^6.1.3",
    "@commitlint/prompt": "^6.1.3",
    "@commitlint/prompt-cli": "^6.1.3",
    "all-contributors-cli": "^4.4.0",
    "babel-eslint": "^8.2.3",
    "babel-inline-import-loader": "^0.0.5",
    "babel-jest": "22.4.3",
    "babel-plugin-flow-react-proptypes": "^23.0.0",
    "babel-plugin-inline-dotenv": "https://github.com/blackxored/babel-plugin-inline-dotenv#fix/relative-paths",
    "babel-plugin-inline-import": "^2.0.6",
    "babel-plugin-transform-define": "https://github.com/blackxored/babel-plugin-transform-define#react-native-packager-fix",
    "babel-plugin-transform-inline-environment-variables": "^0.4.0",
    "babel-preset-react-native": "4.0.0",
    "commitizen": "^2.9.6",
    "documentation": "^6.2.0",
    "eslint": "^4.6.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-cleanjs": "^4.0.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-better": "^0.1.5",
    "eslint-plugin-flowtype": "^2.35.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.0.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-react-native": "^3.1.0",
    "flow-bin": "^0.70.0",
    "husky": "^0.14.3",
    "jest": "22.4.3",
    "lerna": "^2.5.1",
    "lint-staged": "^7.0.4",
    "prettier": "^1.6.1",
    "react-test-renderer": "16.3.2"
  }
}
